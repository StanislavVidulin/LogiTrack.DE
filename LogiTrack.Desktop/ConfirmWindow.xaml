<Window x:Class="LogiTrack.Desktop.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="160" Width="320" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#F3F3F3">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Are you sure you want to delete this item?" 
                       TextWrapping="Wrap" TextAlignment="Center" 
                       FontSize="14" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Width="80" Height="25" Margin="0,0,10,0" 
                        Click="Yes_Click" IsDefault="True"/>
                <Button Content="No" Width="80" Height="25" 
                        Click="No_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>